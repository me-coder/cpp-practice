{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "C/C++: make build_debug",
            "type": "shell",
            "command": "make",
            "args": [
                "debug"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "C/C++: make run_debug",
            "type": "shell",
            "command": "make",
            "args": [
                "run_debug"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "C/C++: make build_release",
            "type": "shell",
            "command": "make",
            "args": [
                "release"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "C/C++: make run_release",
            "type": "shell",
            "command": "make",
            "args": [
                "run"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "test"
            },
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}